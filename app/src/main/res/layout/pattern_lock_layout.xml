<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/black_background">

    <TextView
        android:id="@+id/textView_setPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/icon_size"
        android:textColor="@color/black"
        android:text="Set a Password" />


    <com.takwolf.android.lock9.Lock9View
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lock_9_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:nodeSrc="@drawable/lock_9_view_node_normal"
        app:nodeOnSrc="@drawable/lock_9_view_node_highlighted"
        app:lineColor="#ff006699"
        app:lineWidth="8dp" />

</LinearLayout>